<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1,2,3">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tablerow1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/billtextview"
            android:text="Bill" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/billedittext"
            android:layout_column="1"
            android:layout_span="3"
            android:text="0" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tablerow2" >

        <TextView
            android:text="10%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_column="1" />

        <TextView
            android:text="15%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fiftyPtextview"
            android:layout_column="2"/>

        <TextView
            android:text="20%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twetyPtextview"
            android:layout_column="3"/>

    </TableRow>

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/tablerow3" >

          <TextView
              android:text="Tip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tiptextview1"/>

          <EditText
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="0.00"
              android:id="@+id/tip10edittext" />

          <EditText
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="0.00"
              android:id="@+id/tip15edittext"/>

          <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.00"
              android:id="@+id/tip20edittext" />
      </TableRow>

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/tablerow4">

          <TextView
              android:text="Total"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/Totaltextview1" />

          <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.00"
              android:id="@+id/total10dittext" />

          <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.00"
              android:id="@+id/total15dittext" />

          <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.00"
              android:id="@+id/total20dittext" />
      </TableRow>

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/tablerow5" >

          <SeekBar
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/customseekbar"
              android:layout_span="2"
              android:layout_column="1"/>

          <TextView
              android:text="0"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/customtiptextview"
              android:textSize="15dp"/>
      </TableRow>

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/tipedittext1" >

          <TextView
              android:text="Tip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tiptextview2" />

          <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.00"
              android:id="@+id/customtipeditText" />

          <TextView
              android:text="Total"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/totaltextview2" />

          <EditText
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.00"
              android:id="@+id/totalcustomeditext" />
      </TableRow>

</TableLayout>